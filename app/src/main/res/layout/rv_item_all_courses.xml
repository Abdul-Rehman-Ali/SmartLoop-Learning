<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:padding="10dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <!-- Course Image -->
        <ImageView
            android:id="@+id/ivAllCourseImage"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1.5"
            android:scaleType="fitXY"
            android:layout_margin="10dp"
            android:src="@drawable/webdevelopmentslider" />

        <!-- Course Details -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="start">

            <!-- Course Name -->
            <TextView
                android:id="@+id/tvAllCourseName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course Name"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <!-- Teacher Name -->
            <TextView
                android:id="@+id/tvAllCourseTeacherName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teacher Name"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="4dp" />

            <!-- Course Price -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">

                <!-- Static "PKR" Text -->
                <TextView
                    android:id="@+id/tvPKR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PKR"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@android:color/black" />

                <!-- Dynamic Price Text -->
                <TextView
                    android:id="@+id/tvAllCoursePrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5000"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="4dp" />

            </LinearLayout>

            <!-- Rating Bar and Favorite Icon -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <!-- Course Rating -->
                <RatingBar
                    android:id="@+id/rbAllCourseRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="0.5"
                    android:rating="4.8"
                    style="?android:attr/ratingBarStyleSmall"
                    android:scaleX="1.5"
                    android:scaleY="1.5" />

                <!-- Favorite Icon -->
                <ImageView
                    android:id="@+id/ivFavoriteIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="50dp"
                    android:src="@drawable/baseline_favorite_border_24" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
